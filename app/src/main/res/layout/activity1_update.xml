<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activity1_back"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/backbutton"
        android:shadowColor="#02020A"
        android:text="@string/Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/activity1_create_event"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_below="@+id/xmlActivity1Linear"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginEnd="89dp"
        android:layout_marginRight="89dp"
        android:background="@drawable/createeventbutton"
        android:shadowColor="#2D3EC4"
        android:text="@string/create_event"
        android:textColor="#1432DB"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F59B5F"
        android:fontFamily="Arial"
        android:gravity="center"
        android:text="@string/bth_connect"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/xmlActivity1Linear"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/act1button0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />

        <Button
            android:id="@+id/act1button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_name" />
    </LinearLayout>


</RelativeLayout>